{
    "MuiOutlinedInput": {
        "styleOverrides": {
            "root": {
                "multiline": "true",
                "fontSize": "14px",
                "borderRadius": "5px",
                "height": "30px",
                "width": "98%",
                "fontWeight": 400,
                "color": "#fff",
                "backgroundColor": "#101010",
                "border": "1px solid #4F4F4F",
                "fieldset": {
                    "border": "1px solid #303134 !important"
                },
                " &:hover fieldset": {
                    "border": "1px solid #393b3f !important"
                }
            }
        }
    }
}